#!/bin/bash

# exit script if anything returns an error
set -e

FULCRUM_BINDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")"&&pwd)"

source ${FULCRUM_BINDIR}/fulcrum-site-lib

setupEnv $@

restoreDatabaseBackup

cloneCodebase

drupalVersion

prepFileSystem

nginxConf

fulcrumDBUser

drushSysVars

drushUserLogin