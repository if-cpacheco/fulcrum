#!/bin/bash

# exit script if anything returns an error
set -e

FULCRUM_BINDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")"&&pwd)"
source ${FULCRUM_BINDIR}/site-lib

setupEnv $@

restoreDatabaseBackup

cloneCodebase

drupalVersion

etcHosts 127.0.0.1 $FULCRUM_SITE

nginxConf

fulcrumDBUser

drushSysVars

drushUserLogin